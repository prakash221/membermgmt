@model Model.AchievementModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="pl-3">Edit of Achievement </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group d-none">
        @Html.LabelFor(model => model.AchievementID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AchievementID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AchievementID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="conatrol-label col-md-2">Members </label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.MemberID, (IEnumerable<SelectListItem>)ViewBag.Members, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="conatrol-label col-md-2">Awards </label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AwardId, (IEnumerable<SelectListItem>)ViewBag.Awards, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AwardId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AchieveDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AchieveDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AchieveDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-secondary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
