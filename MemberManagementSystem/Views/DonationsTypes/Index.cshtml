@model IEnumerable<Model.DonationTypeModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="pl-3">List of Donation Type</h2>
<div class="border-top border-dark my-1"></div>
<p class="pl-5 pt-2">
    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th class="d-none">
            @Html.DisplayNameFor(model => model.DonationTypeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonationTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th colspan="2">Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="d-none">
                @Html.DisplayFor(modelItem => item.DonationTypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DonationTypeID }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.DonationTypeID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
