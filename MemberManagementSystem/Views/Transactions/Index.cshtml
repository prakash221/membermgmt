@model IEnumerable<Model.TransactionModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="pl-3">List of Transactions </h2>
<div class="border-top border-dark my-1"></div>
<p class="p-3 border border-dark text-lg">
    
        Entry
        @Html.ActionLink("Membership Fee", "PayMembershipFee", null, new { @class = "btn btn-primary btn-lg mx-2" })
        @Html.ActionLink("Donation", "DonationEntry", null, new { @class = "btn btn-success btn-lg mx-2" })
        @Html.ActionLink("Fine", "PayFine", null, new { @class = "btn btn-danger btn-lg mx-2" })
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TransactionTypeName)
        </th>
       <th>
            @Html.DisplayNameFor(model => model.DonorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th colspan="2">Actions</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.TransactionTypeName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.DonorName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
       
    </tr>
    }

</table>
